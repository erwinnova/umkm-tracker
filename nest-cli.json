{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps",
  "monorepo": true,
  "root": "apps",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/seller/tsconfig.app.json",
    "deleteOutDir": true
  },
  "projects": {
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    },
    "seller": {
      "type": "application",
      "root": "apps/seller",
      "entryFile": "main",
      "sourceRoot": "apps/seller/src",
      "compilerOptions": {
        "tsConfigPath": "apps/seller/tsconfig.app.json"
      }
    },
    "buyer": {
      "type": "application",
      "root": "apps/buyer",
      "entryFile": "main",
      "sourceRoot": "apps/buyer/src",
      "compilerOptions": {
        "tsConfigPath": "apps/buyer/tsconfig.app.json"
      }
    },
    "admin": {
      "type": "application",
      "root": "apps/admin",
      "entryFile": "main",
      "sourceRoot": "apps/admin/src",
      "compilerOptions": {
        "tsConfigPath": "apps/admin/tsconfig.app.json"
      }
    }
  }
}
